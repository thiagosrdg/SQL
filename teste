-- Consultando jogos e suas lojas
SELECT l.nome as loja, j.nome as jogo, lj.preco, lj.quantidade_estoque
FROM loja_jogo lj
JOIN loja l ON l.id = lj.loja_id
JOIN jogo j ON j.id = lj.jogo_id
ORDER BY l.nome, j.nome;

